{
  "name": "wp-esbuild-bundler",
  "version": "1.0.0",
  "description": "A js/css resources bundler targeting WordPress Gutenberg. References to `@wordpress/*` NPM packages will be transformed to their matching global pendants (`window.wp.*`). JSX/PostCSS/SCSS support is built-in.",
  "main": "index.js",
  "engines": {
    "node": ">=18.8",
    "pnpm": ">=7.11"
  },
  "packageManager": "pnpm@7.11.0",
  "type": "module",
  "scripts": {
    "preinstall": "npx -y only-allow pnpm",
    "test": "NODE_NO_WARNINGS=1 node --test test/test-*.js",
    "test:start": "./bin/wp-esbuild-bundler-cli.js --verbose --outdir=./dist --mode=development --wordpress.mappings[\"./mylib.js\"]=window.my.lib ./test/fixtures/wordpress/mylib.js ./test/fixtures/wordpress/figure.js",
    "start": "./bin/wp-esbuild-bundler-cli.js",
    "debug": "NODE_NO_WARNINGS=1 ndb npm run --",
    "check-updates": "pnpm update --interactive"
  },
  "bin": {
    "wp-esbuild-bundler-cli": "bin/wp-esbuild-bundler-cli.js"
  },
  "keywords": [
    "wordpress",
    "esbuild",
    "gutenberg",
    "cli",
    "transpiler",
    "scss",
    "postcss"
  ],
  "author": {
    "email": "lars.gersmann@gmail.com",
    "name": "lars gersmann"
  },
  "license": "MIT",
  "dependencies": {
    "esbuild": "^0.15.7",
    "ndb": "1.1.5",
    "sass": "^1.54.8"
  },
  "peerDependencies": {    
    "debug": "^4.3.4",
    "@wordpress/element": "^4.14.0",
    "@wordpress/icons": "^9.7.0",
    "@wordpress/primitives": "^3.14.0"
  },
  "devDependencies" : {
    "playwright": "1.25.1",
    "@wordpress/components": "20.0.0",
    "@wordpress/api-fetch":"6.13.0",
    "@wordpress/autop":"3.16.0",
    "@wordpress/blob":"3.16.0",
    "@wordpress/block-editor":"9.8.0",
    "@wordpress/block-library":"7.13.0",
    "@wordpress/edit-post":"6.13.0",
    "@wordpress/format-library":"3.14.0",
    "@wordpress/media-utils":"4.7.0",
    "@wordpress/plugins":"4.14.0",
    "@wordpress/preferences-persistence":"1.8.0",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  }
}
