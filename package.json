{
  "name": "@lgersman-wickeltisch/wp-esbuild-bundle",
  "version": "1.0.2",
  "description": "A js/css resources bundler targeting WordPress Gutenberg. References to `@wordpress/*` NPM packages will be transformed to their matching global pendants (`window.wp.*`). JSX/PostCSS/SCSS support is built-in.",
  "main": "index.js",
  "engines": {
    "node": ">=18.8",
    "pnpm": ">=7.11"
  },
  "packageManager": "pnpm@7.11.0",
  "type": "module",
  "scripts": {
    "_preinstall": "echo yes | npx only-allow pnpm",
    "test": "NODE_NO_WARNINGS=1 node --test test/test-*.js",
    "test:start": "./bin/wp-esbuild-bundle-cli.js --verbose --outdir=./dist --mode=development --wordpress.mappings[\"./mylib.js\"]=window.my.lib ./test/fixtures/wordpress/mylib.js ./test/fixtures/wordpress/figure.js",
    "start": "./bin/wp-esbuild-bundle-cli.js",
    "debug": "NODE_NO_WARNINGS=1 ndb npm run --",
    "check-updates": "pnpm update --interactive"
  },
  "files": [
    "src/**/*"
  ],
  "bin": {
    "wp-esbuild-bundle-cli": "bin/wp-esbuild-bundle-cli.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "wordpress",
    "esbuild",
    "gutenberg",
    "cli",
    "transpiler",
    "scss",
    "postcss"
  ],
  "author": {
    "email": "lars.gersmann@cm4all.com",
    "name": "lars gersmann"
  },
  "license": "MIT",
  "dependencies": {
    "esbuild": "^0.15.10",
    "lodash.merge": "4.6.2",
    "sass": "^1.55.0"
  },
  "peerDependencies": {
    "@wordpress/element": "^4.17.0",
    "@wordpress/icons": "^9.10.0",
    "@wordpress/primitives": "^3.17.0",
    "debug": "^4.3.4"
  },
  "devDependencies": {
    "@changesets/cli": "2.25.0",
    "@wordpress/api-fetch": "6.15.0",
    "@wordpress/autop": "3.18.0",
    "@wordpress/blob": "3.18.0",
    "@wordpress/block-editor": "10.1.0",
    "@wordpress/block-library": "7.15.0",
    "@wordpress/components": "21.1.0",
    "@wordpress/dom-ready": "3.18.0",
    "@wordpress/edit-post": "6.15.0",
    "@wordpress/format-library": "3.16.0",
    "@wordpress/media-utils": "4.9.0",
    "@wordpress/plugins": "4.16.0",
    "@wordpress/preferences-persistence": "1.10.0",
    "ndb": "1.1.5",
    "playwright": "1.26.1",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  }
}
